@model IEnumerable<NewsWebsite.Data.Entities.Post>
@{
    ViewBag.Title = "Bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/Areas/Admin/Assets/css/style.css" rel="stylesheet" />
</head>
<div>
    <h2 class="unknown">Quản lý bài viết</h2>
    <a href="/Admin/Post/CreateHandle" class="btn btn-primary unknown"><i class="fa fa-plus"></i> Tạo bài viết</a>
    <hr/>
    <table class="table table-hover table-light">
        <thead>
            <tr>
                <th>ID</th>
                <th>Tiêu đề</th>
                <th>Người đăng</th>
                <th>Thời gian</th>
                <th>Danh mục</th>
                <th>Trạng thái</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.CreatedBy</td>
                <td>@Convert.ToDateTime(item.CreatedTime).ToString("HH:mm:ss dd/MM/yyyy")</td>
                <td>@item.CategoryId</td>
                <td>@item.PostStatus</td>
                <td><a href="/Admin/Post/EditPost/@item.Id"><i class="fa fa-edit"></i></a></td>
                <td><a href="/Admin/Post/DeletePost/@item.Id"><i class="fa fa-trash-alt"></i></a></td>
            </tr>
            }
        </tbody>
    </table>
</div>

