@model IEnumerable<NewsWebsite.Data.Entities.Category>
@{
    ViewBag.Title = "CreateHandle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 style="margin-left:5px">Tạo Bài viết</h2>
<form action="/Admin/Post/CreateAction" method="post" class="form-group" style="margin-left:5px">
    <div>
        <label>Tiêu đề:</label>
        <input type="text" class="form-control" name="Title" />
    </div>
    <div>
        <label>Danh mục :</label>
        <select class="custom-select" name="CategoryId">
            <option selected value="1">Web Design</option>
            @foreach(var item in Model)
            {
                <option value="@item.Id">@item.CategoryName</option>
            }

        </select>
    </div>
    <div>
        <label>Trích dẫn:</label>
        <input type="text" class="form-control" name="Summary" />
    </div>
    <div>
        <label>Nội dung:</label>
        <textarea type="text" class="form-control" name="Content" rows="10"></textarea>
    </div>
    <div>
        <label>Ảnh đại diện:</label>
        <input type="file" accept="image" class="form-control" name="Image" />
    </div>
    <div>
        <label>Nguồn:</label>
        <input type="text" class="form-control" name="Resource" />
    </div>
    <div>
        <label>Tag:</label>
        <input type="text" class="form-control" name="Tags" />
    </div>
    <hr />
    <button type="submit" class="btn btn-success">Cập nhật</button>
    @Html.ValidationSummary()
</form>
