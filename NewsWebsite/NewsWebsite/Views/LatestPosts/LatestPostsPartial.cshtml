@model IEnumerable<NewsWebsite.Data.Entities.Post>

@foreach (var item in Model)
{
    var i = item.CategoryId;
    string str = "";
    switch (i)
    {
        case 1:
            str = "Web Design";
            break;
        case 2:
            str = "Javascript";
            break;
        case 3:
            str = "CSS";
            break;
        case 4:
            str = "Bootstrap";
            break;
        case 5:
            str = "JQuery";
            break;
        case 6:
            str = "HTML";
            break;
        default:
            break;
    }

    <!-- post -->
    <div class="col-md-6">
        <div class="post post-thumb">
            <a class="post-img" href="blog-post.html"><img src="@Url.Content("~/Assets/img/" + item.Image)" height="300" alt=""></a>
            <div class="post-body">
                <div class="post-meta">
                    <a class="post-category cat-2" href="category.html">@str</a>
                    <span class="post-date">@Convert.ToDateTime(item.CreatedTime).ToString("HH:mm:ss dd/MM/yyyy")</span>
                </div>
                <h3 class="post-title"><a href="blog-post.html">@item.Title</a></h3>
            </div>
        </div>
    </div>
    <!-- /post -->
}