@model IEnumerable<NewsWebsite.Data.Entities.Post >

@foreach (var item in Model)
{
    var i = item.CategoryId;
    string str = "";
    switch (i)
    {
        case 1:
            str = "Web Design";
            break;
        case 2:
            str = "Javascript";
            break;
        case 3:
            str = "CSS";
            break;
        case 4:
            str = "Bootstrap";
            break;
        case 5:
            str = "JQuery";
            break;
        case 6:
            str = "HTML";
            break;
        case 9:
            str = "ASP.NET";
            break;
        case 10:
            str = ".NET Core";
            break;
        default:
            break;
    }
    <div class="col-md-12">
        <div class="post post-row">
            <a class="post-img" href="@item.Alias"><img src="@Url.Content("~/Assets/img/" + item.Image)" alt=""></a>
            <div class="post-body">
                <div class="post-meta">
                    <a class="post-category cat-2" href="#">@str</a>
                    <span class="post-date">@item.CreatedTime</span>
                </div>
                <h3 class="post-title"><a href="@item.Alias">@item.Title</a></h3>
                <p>@item.Summary</p>
            </div>
        </div>
    </div>
}
